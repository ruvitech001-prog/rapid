# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_PROJECT_ID=your-project-id

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Rapid.one"

# ===========================================
# External Integrations
# ===========================================

# -------------------------------------------
# Springverify (eKYC & Background Verification)
# Get API keys from: https://springverify.com
# Documentation: https://documenter.getpostman.com/view/3927563/2s8YswRX6z
# -------------------------------------------
SPRINGVERIFY_API_URL=https://api.springverify.com/v1
SPRINGVERIFY_SANDBOX_URL=https://sandbox.springverify.com/v1
SPRINGVERIFY_API_KEY=your-springverify-api-key
SPRINGVERIFY_SECRET_KEY=your-springverify-secret-key
SPRINGVERIFY_WEBHOOK_SECRET=your-webhook-secret
# Set to 'sandbox' for testing, 'production' for live
SPRINGVERIFY_ENV=sandbox

# -------------------------------------------
# Zoho Sign (E-Signatures) - Primary Provider
# Get credentials from: https://api-console.zoho.com/
# Documentation: https://www.zoho.com/sign/api/
# -------------------------------------------
ZOHO_SIGN_API_URL=https://sign.zoho.com/api/v1
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token
ZOHO_SIGN_WEBHOOK_SECRET=your-webhook-secret
# Zoho data center: us, eu, in, com.cn, com.au, jp
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com

# -------------------------------------------
# Keka (HRMS/Payroll Integration)
# Get API keys from: https://developers.keka.com/
# Documentation: https://developers.keka.com/reference/getting-started-with-your-api
# -------------------------------------------
KEKA_API_URL=https://your-company.keka.com/api/v1
KEKA_CLIENT_ID=your-keka-client-id
KEKA_CLIENT_SECRET=your-keka-client-secret
KEKA_API_KEY=your-keka-api-key
KEKA_WEBHOOK_SECRET=your-webhook-secret

# -------------------------------------------
# Plum (Health Insurance)
# Get API keys from: https://partners.plumhq.com
# -------------------------------------------
PLUM_API_URL=https://api.plumhq.com/v1
PLUM_API_KEY=your-plum-api-key
PLUM_PARTNER_ID=your-plum-partner-id
PLUM_WEBHOOK_SECRET=your-webhook-secret
# Set to 'sandbox' for testing, 'production' for live
PLUM_ENV=sandbox

# -------------------------------------------
# SignEasy (Backup E-Signature Provider)
# Get API key from: https://signeasy.com
# -------------------------------------------
SIGNEASY_API_KEY=your-signeasy-api-key
SIGNEASY_API_URL=https://api.signeasy.com/v1
SIGNEASY_WEBHOOK_SECRET=your-webhook-secret

# SendGrid (Email Service)
# Get API key from: https://sendgrid.com
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@rapid.one
SENDGRID_FROM_NAME="Rapid.one"

# SendGrid Template IDs
SENDGRID_TEMPLATE_EMPLOYEE_INVITATION=d-xxxxx
SENDGRID_TEMPLATE_LEAVE_REQUEST=d-xxxxx
SENDGRID_TEMPLATE_EXPENSE_APPROVAL=d-xxxxx
SENDGRID_TEMPLATE_AGREEMENT_REMINDER=d-xxxxx
SENDGRID_TEMPLATE_KYC_STATUS=d-xxxxx

# Inngest (Background Jobs - Optional)
# Get key from: https://inngest.com
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

# Analytics (Optional)
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_OAUTH=true
NEXT_PUBLIC_ENABLE_REFERRALS=true
NEXT_PUBLIC_ENABLE_LTA_CLAIMS=true

# Environment
NODE_ENV=development
